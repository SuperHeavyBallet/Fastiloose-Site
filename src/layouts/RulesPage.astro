---
import NavBar from "../components/NavBar.astro";
import RulesSideMenu from "../components/RulesSideMenu.astro";
import RulesTextSection from "../components/RulesTextSection.astro";
import "../fonts.css";
import "../reset.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Fastiloose! - Rules</title>
  </head>
  <body>
    <NavBar />

    <div class="rule-section">
      <div class="side-menu">
        <RulesSideMenu />
      </div>

      <div class="rule-text-area">
        <RulesTextSection />
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    display: block;
  }

  .rule-section {
    display: grid;
    grid-template-columns: 260px minmax(0, 1fr); /* explicit sidebar + stretchy content */
    column-gap: 2rem;

    /* optional: max-width for readable line length */
    max-width: 1000px;
    margin: 0 auto;
  }

  .side-menu {
    border: 1px solid black;
  }

  .rule-text-area {
    min-width: 0; /* critical so long content doesnâ€™t force overflow */
    /* Use padding instead of big margins if you like */
    padding-right: 5rem;
    display: flex;
    flex-direction: column;
    justify-content: start;
  }
</style>
